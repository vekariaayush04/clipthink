generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String
  prompts   Prompt[]
  createdAt DateTime @default(now())
}

model Prompt {
  id        String   @id @default(uuid())
  content   String
  videoUrl  String?  // optional if video is not generated yet
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  status    Status   @default(PENDING)
}

enum Status {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}